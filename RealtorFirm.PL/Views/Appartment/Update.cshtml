@model IEnumerable<RealtorFirm.PL.Models.AppartmentModel>
@{
//ViewBag.Title = "Update";
}
<div class="window">

    <form action="/Appartment/update" method="post">
        <div style="padding-top:20px">
            <div class="p1">
                City
            </div>
        </div>
        <div>
            <input type="text" name="City" value="@ViewBag.Appartment.City">
        </div>

        <div style="padding-top:20px">
            <div class="p1">
                Address
            </div>
        </div>
        <div>
            <input type="text" name="Address" value="@ViewBag.Appartment.Address">
        </div>

        <div style="padding-top:20px">
            <div class="p1">
                Rooms
            </div>
        </div>
        <div>
            <input type="number" name="Rooms" value="@ViewBag.Appartment.Rooms">
        </div>

        <div style="padding-top:20px">
            <div class="p1">
                Status
            </div>
        </div>
        <div>
            <br><div class="p1"><input type="radio" name="Status" value="not rented" checked>not rented</div><br>
            <div class="p1"><input type="radio" name="Status" value="rented">rented</div><br>
        </div>

        <div style="padding-top:20px">
            <div class="p1">
                Price
            </div>
        </div>
        <div>
            <input type="number" name="Price" value="@ViewBag.Appartment.Price">
        </div>

        <div style="padding-top:20px">
            <div class="p1">
                Description
            </div>
        </div>
        <div>
            <input type="text" name="Description" value="@ViewBag.Appartment.Description">
        </div>

        <br>
        <input type="hidden" value="@ViewBag.Appartment.ClientId" name="ClientId">
        <input type="hidden" value="@ViewBag.Appartment.AppartmentId" name="AppartmentId">

        <div>
            <input value="Update" type="submit" style="width:20%;">
        </div>

    </form>

    <form action="/User/Page" method="get" style="padding-bottom:20px;">
        <input value="Back" type="submit" style="width:20%">
</div>