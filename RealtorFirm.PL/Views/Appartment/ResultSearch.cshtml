@model IEnumerable<RealtorFirm.PL.Models.AppartmentModel>
@{
    ViewBag.Title = "ResultSearch";
}
<br><br>
<div class="window">
    <h2>Result of search</h2>

    <table style="padding-bottom:25px">
        @if (Model.Count() != 0)
        {
        <tr>
            <td><div class="p1"> Address</div></td>
            <td><div class="p1" style="padding-right:30px;"> City</div></td>
            <td><div class="p1" style="padding-right:30px;"> Rooms</div></td>
            <td><div class="p1" style="padding-right:50px;"> Price</div></td>
            <td><div class="p1" style="padding-right:30px;"> Status</div></td>
            <td></td>
        </tr>
        }
        
        @{
            foreach (var n in Model)

            {
                <tr>
                    <td>@n.Address</td>
                    <td style="padding-right:30px;">@n.City</td>
                    <td style="padding-right:30px;">@n.Rooms</td>
                    <td style="padding-right:50px;">@n.Price</td>
                    <td style="padding-right:30px;">@n.Status</td>
                
                        <td>
                            <form method="get" action="/Appartment/Read" style="padding-right:40px;">
                                <input type="hidden" value="@n.UserId" name="user">
                                <input type="hidden" value="@n.AppartmentId" name="appartment">
                                <input value="Read more" type="submit" style="width:110px;">
                            </form>
                        </td>
                    </tr>
                    
            }
        }
    </table>
    @if (Model.Count() == 0)
    {
        <div class="p1" style="padding-bottom:40px;">Sorry, there is no appartment with given parametrs!</div>
    }
</div>

