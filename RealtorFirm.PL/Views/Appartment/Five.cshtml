@model IEnumerable<RealtorFirm.PL.Models.AppartmentModel>
@{
    ViewBag.Title = "Five";
}
<br><br>
<div class="window">

    <h2>Your client`s appartments</h2>
    <div class="p1">You can add only five appartments for one client! So delete one of exist.</div><br>
    <table style="padding-bottom:20px;">


                <tr>
                    <td><div class="p1"> Address</div></td>
                    <td><div class="p1" style="padding-right:30px;"> City</div></td>
                    <td><div class="p1" style="padding-right:30px;"> Rooms</div></td>
                    <td><div class="p1" style="padding-right:50px;"> Price</div></td>
                    <td><div class="p1" style="padding-right:30px;"> Status</div></td>

                    <td></td>
                </tr>


        @{
            foreach (var n in Model)
            {
                <tr>
                    <td><div class="p1"> @n.Address</div></td>
                    <td><div class="p1" style="padding-right:30px;"> @n.City</div></td>
                    <td><div class="p1" style="padding-right:30px;"> @n.Rooms</div></td>
                    <td><div class="p1" style="padding-right:50px;"> @n.Price</div></td>
                    <td><div class="p1" style="padding-right:30px;"> @n.Status</div></td>

                    <td>
                        <form action="/Appartment/deleted" method="get" style="padding-right:30px;">
                            <input type="hidden" value="@n.AppartmentId" name="Id2">
                            <input type="hidden" value="@n.ClientId" name="Id">
                            <input value="Delete" type="submit" style="width:100%;padding-right:15px;">
                        </form>
                    </td>
                </tr>
            }
        }

    </table>
    <form action="/User/Page" method="get" style="padding-right:30px;">
        
        <input value="Back" type="submit" style="width:20%;padding-right:15px;">
    </form>
</div>
