@model IEnumerable<RealtorFirm.PL.Models.ClientModel>
@{
    ViewBag.Title = "Update";
}

<div class="window">

    <form action="/Client/Update" method="post">
        <input type="hidden" value="@ViewBag.Client.ClientId" name="ClientId">
        <div style="padding-top:20px">
            <div class="p1">
                Name
            </div>
        </div>
        <div>
            <input type="text" name="Name" value="@ViewBag.Client.Name">
        </div>
        <div style="padding-top:20px" >
            <div class="p1">
                Surname
            </div>
        </div>
        <div>
            <input type="text" name="Surname" value="@ViewBag.Client.Surname">
        </div>
        <div style="padding-top:20px">
            <div class="p1">
                Patronimic
            </div>
        </div>
        <div>
            <input type="text" name="Patronimic" value="@ViewBag.Client.Patronimic">
        </div>
        <div style="padding-top:20px" >
            <div class="p1">
                Account
            </div>
        </div>
        <div>
            <input type="number" name="Account" pattern="[0-9]{16}" value="@ViewBag.Client.Account">
        </div>

        <div style="padding-top:20px">
            <div class="p1">
                Phone Number
            </div>
        </div>
        <div>
            <input type="text" name="PhoneNumber" pattern="[3][8][0][0-9]{9}" value="@ViewBag.Client.PhoneNumber">
        </div>

        <div style="padding-top:20px">
            <div class="p1">
                Date of birth
            </div>
        </div>
        <div>
            <input type="text" name="DateOfBirth" pattern="[0-3][0-9].[0-1][0-9].[1-2][0-9]{3}" value="@ViewBag.Client.DateOfBirth.ToShortDateString()">
        </div>

        <div style="padding-top:20px">
            <div class="p1">
                Email
            </div>
        </div>
        <div>
            <input type="text" name="Email" value="@ViewBag.Client.Email">
        </div>

        <div>
            <br><div class="p1"><input type="radio" name="Role" value="renter">renter</div><br>
            <div class="p1"><input type="radio" name="Role" value="landlord">landlord</div><br>
        </div>
        <input type="hidden" value="@ViewBag.Client.UserId" name="UserId">
        <div style="padding-bottom:20px;"><input value="Update" type="submit"></div>
    </form>
    <form action="/User/Page" method="get" style="padding-bottom:20px;">
        <input value="Back" type="submit" style="width:20%">
    </form>
</div>
