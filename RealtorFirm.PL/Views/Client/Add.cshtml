@{
    ViewBag.Title = "Add";
}
<br>
<div class="window">
    <form action="/Client/Add" method="post" style="text-align:center">
        <div style="padding-top:20px">
            <div class="p1">Name</div>
        </div>
        <div>
            <input type="text" name="Name" pattern="^[a-zA-Z]+$" required>
        </div>
        <div style="padding-top:20px">
            <div class="p1">Surname</div>
        </div>
        <div> 
            <input type="text" name="Surname" pattern="^[a-zA-Z]+$" required>
        </div>
        <div style="padding-top:20px">
            <div class="p1">Patronimic</div>
        </div>
        <div>
            <input type="text" name="Patronimic" pattern="^[a-zA-Z]+$" required>
        </div>
        <div style="padding-top:20px">
            <div class="p1">Account</div>
        </div>
        <div>
            <input type="number" name="Account" pattern="[0-9]{16}" required>
        </div>

        <div style="padding-top:20px">
            <div class="p1">Phone number</div>
        </div>
        <div>
            <input type="text" name="PhoneNumber" pattern="[3][8][0][0-9]{9}" required>
        </div>

        <div style="padding-top:20px">
            <div class="p1">Date of birth</div>
        </div>
        <div>
            <input type="date" name="DateOfBirth" pattern="[0-3][0-9].[0-1][0-9].[1-2][0-9]{3}" required>
        </div>

        <div style="padding-top:20px">
            <div class="p1">Email</div>
        </div>
        <div>
            <input type="email" name="Email">
        </div>
        <div style="padding-top:20px">
            <div class="p1">Role</div>
        </div>
        <div>
            <br><div class="p1"><input type="radio" name="Role" value="renter">renter</div><br>
            <div class="p1"><input type="radio" name="Role" value="landlord">landlord</div><br>
        </div>

        <input type="hidden" value="@ViewBag.Id" name="UserId">

        <br>
        <div style="padding-bottom:20px;">
            <input value="Add" type="submit" style="width:20%">
        </div>
    </form>
    <form action="/User/Page" method="get" style="padding-bottom:20px;text-align:center">
        <input value="Back" type="submit" style="width:20%;">
    </form>
</div>

